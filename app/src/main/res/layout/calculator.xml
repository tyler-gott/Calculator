<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/displayValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-thin"
        android:hint="0"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="96sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_rowWeight="2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:columnCount="4"
        android:rowCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <android.widget.Button
            android:id="@+id/all_clear"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_light_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onClear"
            android:text="AC"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/plus_minus"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_light_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="plusMinus"
            android:text="+/-"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/percent"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_light_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onPercent"
            android:text="%"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/divide"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_orange"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onDivide"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/seven"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_dark_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onNum7"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/eight"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_dark_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onNum8"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/nine"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_dark_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onNum9"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/multiply"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_orange"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onMultiply"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/four"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_dark_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onNum4"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/five"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_dark_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onNum5"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/six"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_dark_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onNum6"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/subtract"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_orange"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onSubtract"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/one"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_dark_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onNum1"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/two"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_dark_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onNum2"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/three"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_dark_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onNum3"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/add"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_orange"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onAdd"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/zero"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_dark_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onNum1"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/decimal"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_dark_gray"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onDecimal"
            android:text="."
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />

        <android.widget.Button
            android:id="@+id/equals"
            android:layout_width="78dp"
            android:layout_height="78dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/button_orange"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical|center_horizontal"
            android:onClick="onEquals"
            android:text="="
            android:textColor="@color/white"
            android:textSize="30sp"
            app:iconTint="@color/button_dark_gray"
            android:layout_gravity="center"
            app:rippleColor="#FFFFFF" />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>